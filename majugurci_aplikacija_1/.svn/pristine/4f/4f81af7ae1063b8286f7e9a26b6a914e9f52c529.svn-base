<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>KontrolaPristupa</filter-name>
        <filter-class>org.foi.nwtis.majugurci.web.filteri.KontrolaPristupa</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>KontrolaPristupa</filter-name>
        <url-pattern>/privatno/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>org.foi.nwtis.majugurci.web.slusaci.SlusacAplikacije</listener-class>
    </listener>
    <context-param>
        <param-name>konfiguracijaBaza</param-name>
        <param-value>NWTiS.db.config_1.xml</param-value>
    </context-param>
    <context-param>
        <param-name>konfiguracijaRazno</param-name>
        <param-value>razne_postavke.xml</param-value>
    </context-param>
    <context-param>
        <param-name>cjenik</param-name>
        <param-value>cjenik.xml</param-value>
    </context-param>
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
    </listener>
    <listener>
        <description>HttpSessionListener</description>
        <listener-class>org.foi.nwtis.majugurci.web.slusaci.SlusacSesije</listener-class>
    </listener>
    <servlet>
        <servlet-name>MeteoPodaciWS</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Kontroler</servlet-name>
        <servlet-class>org.foi.nwtis.majugurci.web.kontrole.Kontroler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObradaPogreske</servlet-name>
        <servlet-class>org.foi.nwtis.majugurci.web.kontrole.ObradaPogreske</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MeteoPodaciWS</servlet-name>
        <url-pattern>/MeteoPodaciWS</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Kontroler</servlet-name>
        <url-pattern>/Kontroler</url-pattern>
        <url-pattern>/PrijavaKorisnika</url-pattern>
        <url-pattern>/OdjavaKorisnika</url-pattern>
        <url-pattern>/PregledFinancija</url-pattern>
        <url-pattern>/PregledZahtjeva</url-pattern>
        <url-pattern>/ProvjeraKorisnika</url-pattern>
        <url-pattern>/AzurirajStanje</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObradaPogreske</servlet-name>
        <url-pattern>/ObradaPogreske</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>org.foi.nwtis.majugurci.web.kontrole.NeuspjesnaPrijava</exception-type>
        <location>/ObradaPogreske</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/ObradaPogreske</location>
    </error-page>
    <security-constraint>
        <display-name>Sigurna veza</display-name>
        <web-resource-collection>
            <web-resource-name>Sigurna veza</web-resource-name>
            <description>Sigurna veza</description>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <description>Sigurna veza</description>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>
