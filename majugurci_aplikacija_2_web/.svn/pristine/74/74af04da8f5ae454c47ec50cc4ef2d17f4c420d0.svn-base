<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html">
    <f:view locale="#{lokalizacija.vazecaLokalizacija}">

        <f:metadata>
            <f:event type="preRenderView" listener="#{lokalizacija.init}"/>
        </f:metadata>

        <ui:composition template="./predlozak.xhtml">

            <ui:define name="naslov">
                Registracija
            </ui:define>

            <ui:define name="navigacija">
                <li><h:link outcome="login.xhtml" value="#{m.indexOdabirAkcije_linkLogin}" /><br/></li>
            </ui:define>

            <ui:define name="sadrzaj">
                <h1>Registracija</h1>

                <article>

                    <fieldset>
                        <h:form>
                            <h:panelGrid columns="2">
                                <h:outputLabel value="Korisničko ime:"/> 
                                <h:inputText value="#{registracijaObrada.korisnickoIme}"/>

                                <h:outputLabel value="Lozinka:"/> 
                                <h:inputSecret value="#{registracijaObrada.lozinka}"/>

                                <h:outputLabel value="Ponovljena lozinka:"/> 
                                <h:inputSecret value="#{registracijaObrada.ponovljenaLozinka}"/>

                                <h:commandButton value="Registriraj me!" action="#{registracijaObrada.obradiRegistraciju}"
                                                 class="formbutton"/>
                            </h:panelGrid>
                        </h:form>
                    </fieldset>

                    <h:messages globalOnly="true" infoStyle="color:darkgreen" errorStyle="color:darkred"/>

                </article>
            </ui:define>
        </ui:composition>
    </f:view>
</html>

