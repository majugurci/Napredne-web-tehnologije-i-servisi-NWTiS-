<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <locale-config>
            <default-locale>hr</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>org.foi.nwtis.majugurci.i18n</base-name>
            <var>m</var>
        </resource-bundle>
    </application>
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{lokalizacija.odaberiJezik}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/indexOdabirAkcije.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{lokalizacija.odaberiJezik}</from-action>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginObrada.obradiPrijavu}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/indexOdabirAkcije.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginObrada.obradiPrijavu}</from-action>
            <from-outcome>OK-DOPUNA</from-outcome>
            <to-view-id>/privatno/nadopuniPodatke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginObrada.obradiPrijavu}</from-action>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/indexOdabirAkcije.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{indexOdabirAkcije.odjavaKorisnika}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/indexOdabirAkcije.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registracijaObrada.obradiRegistraciju}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{registracijaObrada.obradiRegistraciju}</from-action>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>      
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/privatno/nadopuniPodatke.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{nadopunaPodataka.nadopuniPodatke}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/indexOdabirAkcije.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{nadopunaPodataka.nadopuniPodatke}</from-action>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/privatno/nadopuniPodatke.xhtml</to-view-id>      
        </navigation-case>
        <navigation-case>
            <from-action>#{nadopunaPodataka.preusmjeriNaIndex}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>      
        </navigation-case>
        <navigation-case>
            <from-action>#{nadopunaPodataka.preusmjeriNaIndexOdabirAkcije}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/indexOdabirAkcije.xhtml</to-view-id>      
        </navigation-case>
    </navigation-rule>
</faces-config>
