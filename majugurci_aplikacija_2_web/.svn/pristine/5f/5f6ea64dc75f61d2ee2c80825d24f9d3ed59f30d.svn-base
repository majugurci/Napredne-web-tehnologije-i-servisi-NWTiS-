<?xml version='1.0' encoding='UTF-8' ?> 
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core">

    <f:view locale="#{lokalizacija.vazecaLokalizacija}">

        <h:head>
            <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
            <h:outputStylesheet name="styles.css"/>
            <!--<h:outputScript name="jquery-2.1.4.min.js"/>-->
            <title><ui:insert name="naslov">Naslov</ui:insert></title>
            <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0" />
        </h:head>

        <h:body>

            <section id="body" class="width">

                <aside id="sidebar" class="column-left">

                    <header>
                        <h1><a href="#">App 2</a></h1>
                        <h2>by Mario Jugurčić</h2>
                    </header>

                    <nav id="mainnav">    
                        <h:form>
                            <ul>
                                <h:panelGroup rendered="#{not empty korisnik}">
                                    <p class="dobrodoslica">#{m.navigacija_dobrodosli} #{korisnik.korisnickoIme}</p>
                                    <div class="odjava">
                                        <h:commandLink action="#{indexOdabirAkcije.odjavaKorisnika}" 
                                                       value="#{m.navigacija_odjava}" 
                                                       styleClass="linkOdjava"/>
                                    </div>
                                </h:panelGroup><br/>

                                <li><h:link outcome="/indexOdabirAkcije.xhtml" value="#{m.navigacija_pocetna}"/></li>
                                <li><h:link outcome="/index.xhtml" value="#{m.navigacija_odaberiJezik}"/></li>

                                <ui:insert name="navigacija">Navigacija</ui:insert>
                            </ul>
                        </h:form>
                    </nav>
                </aside>

                <section id="content" class="column-right">

                    <ui:insert name="sadrzaj">Sadrzaj</ui:insert>

                    <footer class="clear">
                        <p>&copy; 2015 Mario Jugurčić. <a href="http://zypopwebtemplates.com/">Free CSS Templates</a> by ZyPOP</p>
                    </footer>

                </section>

                <div class="clear"></div>

            </section>

        </h:body>

    </f:view>

</html>
