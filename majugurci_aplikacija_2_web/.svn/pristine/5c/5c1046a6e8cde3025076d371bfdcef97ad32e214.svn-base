<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html">

        <f:metadata>
            <f:event type="preRenderView" listener="#{lokalizacija.init}"/>
        </f:metadata>

        <ui:composition template="/predlozak.xhtml">

            <ui:define name="naslov">
                #{m.nadopuniPodatke_naslov}
            </ui:define>

            <ui:define name="navigacija">
                <li><h:link outcome="/privatno/pregledAdreseMeteo.xhtml" value="#{m.navigacija_adreseMeteoPodaci}"/></li>
            </ui:define>

            <ui:define name="sadrzaj">
                <h1>#{m.nadopuniPodatke_naslov}</h1>

                <article>

                    <fieldset>
                        <h:form>
                            <h:panelGrid columns="2">
                                <h:outputLabel value="#{m.nadopuniPodatke_korisnickoIme}"/> 
                                <h:inputText disabled="true" value="#{nadopunaPodataka.korisnickoIme}"/>

                                <h:outputLabel value="#{m.nadopuniPodatke_lozinka}"/> 
                                <h:inputSecret autocomplete="off" value="#{nadopunaPodataka.novaLozinka}"/>

                                <h:outputLabel value="#{m.nadopuniPodatke_lozinkaPonovljena}"/> 
                                <h:inputSecret value="#{nadopunaPodataka.novaLozinkaPotvrda}"/>

                                <h:outputLabel value="#{m.nadopuniPodatke_ime}"/> 
                                <h:inputText value="#{nadopunaPodataka.ime}"/>
                                
                                <h:outputLabel value="#{m.nadopuniPodatke_prezime}"/> 
                                <h:inputText value="#{nadopunaPodataka.prezime}"/>
                                
                                <h:outputLabel value="#{m.nadopuniPodatke_email}"/> 
                                <h:inputText value="#{nadopunaPodataka.email}"/>

                                <h:outputLabel value="#{m.nadopuniPodatke_vrijemeRegistracije}"/> 
                                <h:inputText disabled="true" value="#{nadopunaPodataka.vrijemeRegistracije}"/>


                                <h:commandButton class="formbutton" value="#{m.nadopuniPodatke_buttonAzurirajPodatke}" 
                                                 action="#{nadopunaPodataka.nadopuniPodatke}"/>
                            </h:panelGrid>
                        </h:form>
                    </fieldset>

                    <h:messages globalOnly="true" infoStyle="color:darkgreen" errorStyle="color:darkred"/>

                </article>
            </ui:define>
        </ui:composition>
</html>

